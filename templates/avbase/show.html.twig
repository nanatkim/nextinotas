                                {#{% elseif av.idAvbase.id == avbase.id %}#}
                                     {#<td>#}
                                         {#<a href="{{ path('avaluno_new',{'facul':turma.faculdade.id,'turma':turma.id,'avbase':avbase.id,'aluno':rel.idAluno.id}) }}" class="btn btn-default">Nota</a>#}
                                     {#</td>#}
                                {% endif %}
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}