                    <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rel in relacoes %}
                        <tr>
                            <th scope="row">{{ rel.idAluno.nome }}</th>
