{% extends 'base.html.twig' %}
{% block body %}
    <main>
        <a class="btn btn-default" href="{{ path('turma_show', {'id': turma.id, 'facul':faculdade.id}) }}">Voltar</a>
        <hr>
        <section class="container">
            <div class="panel-heading">
                <h2>Notas</h2>
                <label for="filtrar-tabela">Procurar</label>
                <input class="form-control" type ="text" name="filtro" id="filtrar-tabela" placeholder="nome do aluno">
                <div class="row">
                    <div class="panel panel-default">
                        <table class="table table-responsive">
                            <thead><!-- for atributos de aluno}}-->
                                <tr>
                                    <th>Nome</th>
                                    <th>Matricula</th>
                                    <!-- for do av_tipo}}-->
                                    {% for av in avp1 %}
                                    <th>{{ av.idTipo.tipo }}</th>
                                    {% endfor %}
                                    <th>AVPI</th>
                                    {% for av in avp2 %}
                                        <th>{{ av.idTipo.tipo }}</th>
                                    {% endfor %}
                                    <th>AVPII</th>
                                    {% for av in avf %}
                                        <th>{{ av.idTipo.tipo }}</th>
                                    {% endfor %}
                                    <th>Média</th>
                                    <th>AVF</th>
                                    <th>Média Final</th>
                                    <!-- endfor do av_tipo}}-->
                                </tr>
                            </thead>
                            <!-- for atributos de aluno}}-->
                            <tbody id="tabela-alunos">
                            {% for aluno in turmaluno %}
                                <tr class="aluno" id="primeiro">
                                    <td class="info-nome">{{ aluno.idAluno.nome }}</td>
                                    <td class="info-matricula">{{ aluno.idAluno.matricula }}</td>
                                    <!-- for notas_aluno}}-->
                                    {% for av in avaluno %}
                                        {% if av.idAluno.idAluno.id == aluno.idAluno.id and av.idAvbase.descricao == "AVPI" %}
                                            <td class="info-av1">{{ av.nota }}</td>
                                        {% endif %}
                                    {% endfor %}
                                    <td class="mediaIndividual1">0</td>
                                    {% for av in avaluno %}
                                        {% if av.idAluno.idAluno.id == aluno.idAluno.id and av.idAvbase.descricao == "AVPII" %}
                                            <td class="info-av2">{{ av.nota }}</td>
                                        {% endif %}
                                    {% endfor %}
                                    <td class="mediaIndividual2">0</td>
                                    <td class="info-mediaAv">0</td>
                                    <!--end for notas aluno}}-->
                                    {% for av in avaluno %}
                                        {% if av.idAluno.idAluno.id == aluno.idAluno.id and av.idAvbase.descricao == "AVF" %}
                                            <td class="info-avf">{{ av.nota }}</td>
                                        {% endif %}
                                    {% endfor %}
                                    <td class="mediafinal">0</td>
                                </tr>
                            {% endfor %}
                            <!-- end for atributos de aluno}}-->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('web/js.js') }}"></script>
    <script src="{{ asset('web/media.js') }}"></script>
{% endblock %}