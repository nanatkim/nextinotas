{% extends 'base.html.twig' %}

{% block title %}Faculdade{% endblock %}

{% block body %}
    <div class="container text">
        <div class="row">
            <div class="pull-right">
                <input class="form-control" id="myInputList" type="text" placeholder="pesquisar...">
            </div>
        </div>
        <hr>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list" id="text"></span>
                <div class="pull-right">
                    <a href="{{ path('faculdade_new') }}"><img src="{{ asset('web/add.png') }}" height="20px" width="20px"></a>
                    Adicionar Faculdade
                </div>
            </div>
            <div class="panel-body">
                <ul class="list-group" id="myList">
                    {% for faculdade in faculdades %}
                        {% if faculdade.id != null %}
                            <li class="list-group-item">
                                <div class="row">
                                    <a href="{{ path('faculdade_show', {'id': faculdade.id, 'user':app.user.id}) }}">
                                        <div class="col-md-6">
                                            <label>
                                                {{ faculdade.nome }}
                                            </label>
                                        </div>
                                    </a>
                                    <div class="pull-right action-buttons">
                                        <a href="{{ path('faculdade_edit', {'id': faculdade.id}) }}">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a href="{{ path('faculdade_delete', {'id': faculdade.id}) }}" class="trash">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </a>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="3">Ainda não há nenhuma faculdade cadastrada.</td>
                        </tr>
                    {% endfor %}
                </ul>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-6">
                        <h6>
                            Total de faculdades <span class="label label-info"> {{ qtd }}</span></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/pesquisa.js') }}"></script>
{% endblock %}