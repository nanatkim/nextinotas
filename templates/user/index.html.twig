{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container text">
        <a class="btn btn-default" href="{{ path('faculdade_show',{'id': faculdade.id, 'user': app.user.id}) }}">Voltar</a>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-list"></span>Lista de Usuário
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            {% for us in users %}
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-10" data-toggle="collapse"
                                             href="#collapseExample{{ us.id }}"
                                             aria-expanded="false" aria-controls="collapseExample{{ us.id }}">
                                            <label>{{ us.name }}</label>
                                        </div>
                                    </div>
                                    <div class="collapse" id="collapseExample{{ us.id }}">
                                        <div class="card card-block">
                                            <ul>
                                                <li>Nome: {{ us.name }}</li>
                                                <li>Email: {{ us.email }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>
                                    Total de Usuário <span class="label label-info">{{ qtd }}</span></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}