{% extends 'base.html.twig' %}

{% block title %}TurmAluno{% endblock %}

{% block body %}

    <a class="btn btn-default text" href="{{ path('turma_show',{'facul':facul, 'id':turma.id}) }}">Voltar</a>
 <hr>
    <div class="row text">
        <div class="col-md-6 col-md-offset-3">
            {% for flash_message in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">
                    {{flash_message}}
                </div>
            {% endfor %}
            <div class="panel panel-primary">
                <div class="panel-heading">TurmAluno</div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}