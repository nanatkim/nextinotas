{% extends 'base.html.twig' %}

{% block title %}Disciplina{% endblock %}

{% block body %}
    <div class="container text">
        <div class="row">
            <div class="col-md-1 col-sm-1">
                <a class="btn btn-default" href="{{ path('faculdade_show', {'id':faculdade.id, 'user': app.user.id}) }}">Voltar</a>
            </div>
            <div class="pull-right">
                <input class="form-control" id="myInputList" type="text" placeholder="pesquisar...">
            </div>
        </div>
        <hr>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-list"></span>
                <div class="pull-right">
                    <a href="{{ path('disciplina_new', {'facul':faculdade.id}) }}"><img src="{{ asset('web/add.png') }}" height="20px" width="20px"></a>     Adicionar Disciplina</div>
            </div>
            <div class="panel-body">
                <ul class="list-group" id="myList">
                    {% for disciplina in disciplinas %}
                        <li class="list-group-item">
                            <label>
                                {{ disciplina.nome }}
                            </label>
                            <div class="pull-right action-buttons">
                                <a href="{{ path('disciplina_edit', {'id': disciplina.id, 'facul':faculdade.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="{{ path('disciplina_delete', {'id': disciplina.id, 'facul':faculdade.id}) }}" class="trash"><span
                                            class="glyphicon glyphicon-trash"></span></a>
                            </div>
                        </li>
                    {% else %}
                        <tr>
                            <td colspan="3">Ainda n√£o existem disciplinas cadastradas.</td>
                        </tr>
                    {% endfor %}
                </ul>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h6>
                            Total de Disciplinas <span class="label label-info">{{ qtd }}</span></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/pesquisa.js') }}"></script>
{% endblock %}